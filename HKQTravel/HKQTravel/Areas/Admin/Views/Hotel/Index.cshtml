@using PagedList.Mvc;
@using HKQTravel.Models;
@model PagedList.PagedList<HKQTravel.Models.hotel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-danger">
                        DANH SÁCH KHÁCH SẠN
                    </strong>
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Create","Hotel")" class="btn btn-sm btn-success">Thêm</a>
                    <a href="@Url.Action("","")" class="btn btn-sm btn-danger">Thùng rác</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Tên phòng</th>
                    <th>Địa điểm</th>
                    <th>Số phòng</th>
                    <th>Giá</th>
                    <th>Hạng phòng</th>
                    <th>Hình ảnh</th>
                    <th>Chức năng</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center"><input type="checkbox" /></td>
                        <td class="text-center">@item.hotel_id</td>
                        <td>@item.hotel_name</td>
                        <td>@item.location</td>
                        <td>@item.number_room</td>
                        <td>@item.rice</td>
                        <td>@item.ranking</td>
                        <td>@item.image</td>
                        <td class="text-center">

                            <a href="@Url.Action("Edit","Hotel",new { id = item.hotel_id })" class="btn btn-sm btn-success">Sửa</a>
                            <a href="@Url.Action("Details","Hotel",new { id = item.hotel_id })" class="btn btn-sm btn-info">Chi tiết</a>
                            <a href="@Url.Action("Delete","Hotel",new { id = item.hotel_id })" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            </table>

        </div>
        <div class="card-footer">
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
            </div>
            <style>
                .MenuTrang li {
                    display: inline;
                }

                    .MenuTrang li a {
                        color: black;
                        float: left;
                        padding: 8px 16px;
                        text-decoration: none;
                    }
            </style>
        </div>
    </div>
</section>